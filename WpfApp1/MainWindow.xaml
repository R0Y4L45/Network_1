<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.25*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.005*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.005*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Row="1" Grid.Column="1" Name="btn" Content="ScreenShot" HorizontalAlignment="Center"
                Margin="0,11,0,0" VerticalAlignment="Top" 
                RenderTransformOrigin="-2.817,-0.426" 
                Width="128" Height="33" Click="btn_Click"/>
        <Image Grid.Column="1" Name ="img" HorizontalAlignment="Center" Height="340" Margin="10" VerticalAlignment="Top" Width="1000"/>

    </Grid>
</Window>
